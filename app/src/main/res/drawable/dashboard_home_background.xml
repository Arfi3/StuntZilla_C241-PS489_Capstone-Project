<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/>
        </shape>
    </item>

    <!-- Shadow -->
    <item android:bottom="10dp" android:left="5dp" android:right="10dp" android:top="5dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="#BA000000"
                android:endColor="#BA342F2F"
                android:type="linear"/>
            <corners android:radius="20dp"/>
        </shape>
    </item>

    <!-- Content with shadow -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/>
            <corners android:radius="20dp"/>
        </shape>
    </item>
</layer-list>