<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.StunZilla" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="TextBold">
        <item name="fontFamily">@font/inter_bold</item>
    </style>

    <style name="TextMedium">
        <item name="fontFamily">@font/inter_semibold</item>
    </style>

    <style name="TextRegular">
        <item name="fontFamily">@font/inter_medium</item>
    </style>

    <style name="Button" parent="TextMedium">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ButtomNavText" parent="TextAppearance.AppCompat.Caption">
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:textStyle">normal</item>
    </style>
</resources>

